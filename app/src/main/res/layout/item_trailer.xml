<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:background="?android:selectableItemBackground"
                android:theme="@style/AppTheme.ListView"
                android:padding="@dimen/margin_small">

    <ImageView
        android:id="@+id/play_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        app:srcCompat="@drawable/ic_play_arrow" />

    <TextView
        android:id="@+id/trailer_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/play_image_view"
        android:layout_toEndOf="@+id/play_image_view"
        android:layout_toLeftOf="@+id/share_trailer_button"
        android:layout_toStartOf="@+id/share_trailer_button"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/movie_detail_text_size" />

    <ImageButton
        android:id="@+id/share_trailer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground"
        app:srcCompat="@drawable/ic_share" />
</RelativeLayout>